<?xml version="1.0"?>
<launch>

    <!-- send urdf to param server -->
    <arg name="model_description"
        default="$(find aliengo_wild_visual_navigation)/urdf/sphere_model.urdf" />

    <param name="sphere_description"
        command="$(find xacro)/xacro --inorder '$(find aliengo_wild_visual_navigation)/urdf/sphere_model.urdf'" />
    <param name="robot_description"
        command="$(find xacro)/xacro --inorder '$(find aliengo_wild_visual_navigation)/urdf/sphere_model.urdf'" />

    <!-- send fake joint values -->
    <!-- <node name="joint_state_publisher" pkg="joint_state_publisher"
        type="joint_state_publisher">
        <param name="use_gui" value="false" />
    </node> -->

    <!-- send robot states to tf -->
    <node name="robot_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher">
        <!-- respawn="false" output="screen"> -->
        <remap from="robot_description" to="sphere_description" />
    </node>
    <!-- Spawn My Robot -->
    <node name="urdf_spawner" pkg="gazebo_ros" type="spawn_model" respawn="false" output="screen"
        args="-urdf -param sphere_description -model my_sphere -x 0.5 -y 0.5 -z 0.8 -P -0.785" />

    <include file="$(find gazebo_ros)/launch/empty_world.launch">
        <arg name="use_sim_time" value="true" />
        <arg name="debug" value="false" />
        <arg name="gui" value="true" />
        <arg name="paused" value="true" />
        <!-- <arg name="world_name" value="$(arg world_file)" /> -->
    </include>

</launch>